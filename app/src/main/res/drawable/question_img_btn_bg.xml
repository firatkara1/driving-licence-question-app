<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list android:state_pressed="true">
            <item>

                <shape android:shape="rectangle">
                    <padding android:top="8dp"  android:left="8dp"  />

                    <solid android:color="#00CCCCCC" />
                    <corners android:topLeftRadius="20dp"  android:bottomRightRadius="10dp"/>

                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="20dp"  android:bottomRightRadius="10dp"/>
                    <stroke android:color="@color/colorOverBackgroundMoreDarker" android:width="2dp"/>
                    <solid android:color="@color/colorOverBackgroundMoreDarker" />

                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list android:state_pressed="true">
            <item>
                <shape android:shape="rectangle">
                    <padding android:top="2dp"  android:left="2dp"  />
                    <corners android:topLeftRadius="20dp" android:bottomRightRadius="10dp"/>
                    <solid android:color="#00CCCCCC" />


                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:top="2dp"  android:left="2dp"  />
                    <corners android:topLeftRadius="20dp" android:bottomRightRadius="10dp"/>
                    <solid android:color="#10CCCCCC" />


                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <padding android:top="2dp" android:left="2dp" />
                    <corners android:topLeftRadius="20dp" android:bottomRightRadius="10dp"/>
                    <solid android:color="#20CCCCCC" />


                </shape>
            </item>


            <!-- Background -->
            <item>

                <shape android:shape="rectangle">
                    <solid android:color="@color/colorOverBackground" />
                    <corners android:topLeftRadius="20dp" android:bottomRightRadius="10dp"/>
                    <stroke android:color="@color/colorOverBackgroundMoreDarker" android:width="2dp"/>
                </shape>
            </item>


        </layer-list>
    </item>

</selector>

