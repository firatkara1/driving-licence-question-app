<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/note_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="5dp"
    android:layout_margin="10dp"
    android:paddingEnd="15dp"
    android:layout_marginTop="8dp"
    android:paddingBottom="15dp">



    <ImageView
        android:id="@+id/handSignImageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/light_shadow_bg"
        android:layout_margin="5dp"
        android:layout_gravity="center">

    </ImageView>

    <TextView
        android:id="@+id/handSignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:padding="4dp"
        android:textColor="@color/colorDarkerText"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="Hand Sign"
        android:textSize="18sp">

    </TextView>

</LinearLayout>