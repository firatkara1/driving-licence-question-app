<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_subcategory_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/category_btn"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/sign_category_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/museo_sans500"
        android:textColor="@color/colorDarkerText"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Category Text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_subcategory_btn"
        />

    <Button
        android:id="@+id/item_subcategory_btn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/option_btn_bg"
        android:backgroundTint="@color/colorGreen"
        android:clickable="true"
        android:drawableTop="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableTint="@color/colorOverBackground"
        android:focusable="true"
        android:fontFamily="@font/museo_sans500"
        android:paddingStart="10dp"
        android:paddingTop="7dp"
        android:paddingEnd="2dp"
        android:textAllCaps="false"
        android:textColor="@color/colorDarkerText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>